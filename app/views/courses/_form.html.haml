= simple_form_for(@course) do |f|
  = f.error_notification

  .form-inputs
    = f.input :ClubCompanyNumber, :as => :hidden, :input_html => { :value => current_user.company_id}
    = f.input :CourseName, as: :string
    = f.input :transaction_fee
    = f.input :time_zone, priority: /US/, collection: ActiveSupport::TimeZone.us_zones, required: true, as: :time_zone

  .form-actions
    = link_to 'Cancel', :back, class: 'btn btn-secondary'
    = f.button :submit, class: 'btn btn-primary'
