
.container
  %p.lead 
    Name:
    = @club.name
  -#
    %p
      %b Members:
      %br
      - @club.members.each do |member|
        = link_to member.full_name, member
        %br

  %p.lead 
    Caddies:
    %br
    - unless @caddies.blank?
      - @caddies.each do |caddy|
        = link_to caddy.full_name, caddy
        %br
    - else
      None

  %p.lead Caddy Pay Rates:
  %table.table.table-striped
    %thead
      %tr
        %th Ranking
        %th Type
        %th Holes
        %th Rate
        %th
    %tbody
      - @caddy_pay_rates.each do |caddy_pay_rate|
        %tr
          %td= caddy_pay_rate.RankingAcronym
          %td= caddy_pay_rate.Type
          %td= caddy_pay_rate.NbrHoles
          %td= number_to_currency(caddy_pay_rate.Payrate)
          %td
            = link_to 'Show', caddy_pay_rate_path(caddy_pay_rate.ClubCompanyID, ranking_acronym: caddy_pay_rate.RankingAcronym), class: 'btn btn-sm btn-secondary'
            = link_to 'Edit', edit_caddy_pay_rate_path(caddy_pay_rate.ClubCompanyID, ranking_acronym: caddy_pay_rate.RankingAcronym), class: 'btn btn-sm btn-primary'


  = link_to 'Edit', edit_club_path(@club)
  \|
  = link_to 'Back', clubs_path
