#pay_caddy_by_club.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "exampleModalLabel", :role => "dialog"}
  .modal-dialog.modal-sm{:role => "document"}
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
        .modal-title
          .lead 
            %i.fa.fa-dollar
            = "Pay #{@caddy.full_name}"
      .modal-body
        = form_tag pay_caddy_path(@caddy), id: 'pay_caddy_by_club_form', method: 'get', class: 'form-inline' do |f|
          %p
            .input-group
              %span.input-group-addon
                %i.fa.fa-dollar
              = text_field_tag :amount, nil, :placeholder => "Amount", class: "form-control input-lg", required: true
          %p= text_area_tag :note, nil, :placeholder => "Note", class: "form-control input-lg", style: "width: 100%;"

          .modal-footer
            %button.btn.btn-secondary{"data-dismiss" => "modal", :type => "button"} Cancel
            %button.btn.btn-success{id: 'pay_by_club_button', :type => "submit", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Pay"}} 
              %i.fa.fa-dollar
              Pay