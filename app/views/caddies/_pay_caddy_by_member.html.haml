#pay_caddy_by_member.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "exampleModalLabel", :role => "dialog"}
  .modal-dialog.modal-sm{:role => "document"}
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
        .modal-title
          .lead 
            %i.fa.fa-dollar
            = "Pay #{@caddy.full_name}"
      .modal-body
        = form_tag pay_caddy_path(@caddy), id: 'pay_caddy_by_member_form', method: 'get', class: 'form-inline' do |f|
          .form-group.col-xs-12.col-sm-12.col-md-12
            %p= select_tag :member_id, options_from_collection_for_select(current_user.members.active.order(:NameL), "id", "full_name"), prompt: '-- Select member --', class: "form-control member_select", style: "width: 100%;", required: true
          .form-group
            .input-group.col-xs-12.col-sm-12.col-md-12
              %span.input-group-addon
                %i.fa.fa-dollar
              = text_field_tag :amount, nil, :placeholder => "Amount", class: "form-control input-lg", required: true
          %br
          %br
          .modal-footer
            %button.btn.btn-secondary{"data-dismiss" => "modal", :type => "button"} Cancel
            %button.btn.btn-success{id: 'send_sms_button', :type => "submit", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i>"}} 
              %i.fa.fa-dollar
              Pay