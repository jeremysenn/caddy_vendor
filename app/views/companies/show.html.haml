.container
  %br
  %h3
    = @company.CompanyName
  %br
  .card.card-block
    %h4.card-title Clubs
    .table-responsive
      %table.table.table-striped
        %thead
          %tr
            %th Name
            %th
        %tbody
          - @company.clubs.each do |club|
            %tr
              %td= club.name
              %td
                = link_to "Show", club, class: 'btn btn-secondary'
                = link_to 'Edit', edit_club_path(club), class: 'btn btn-primary'

  .card.card-block
    %h4.card-title Members
    - @members.each do |member|
      %div.col-xs-6.col-sm-4.col-md-3
        %p= link_to member.full_name, member
    -#   
      - @members.each_slice(40) do |members|
        %div.col-xs-6.col-sm-4
          .table-responsive
            %table.table.table-striped.table-sm
              %tbody
                - members.each do |member|
                  %tr
                    %td= link_to member.full_name, member
                    -#
                      %td
                        = link_to "Show", member, class: 'btn btn-secondary btn-sm'
                        = link_to 'Edit', edit_customer_path(member), class: 'btn btn-primary btn-sm'
    
    = paginate @members

  .card.card-block
    %h4.card-title Caddies
    .table-responsive
      %table.table.table-striped
        %thead
          %tr
            %th Name
            %th Club
            %th Ranking
            %th
        %tbody
          - @company.caddies.each do |caddy|
            %tr
              %td= caddy.full_name
              %td= link_to caddy.club.name, caddy.club
              %td= link_to caddy.acronym, caddy.caddy_rank_desc
              %td
                = link_to "Show", caddy_path(caddy.id, club_id: caddy.ClubCompanyNbr), class: 'btn btn-secondary'
                = link_to 'Edit', edit_caddy_path(caddy.id, club_id: caddy.ClubCompanyNbr), class: 'btn btn-primary'
  
  = link_to 'Companies', companies_path, class: 'btn btn-secondary'
  = link_to 'Edit company', edit_company_path(@company), class: 'btn btn-primary'
  
