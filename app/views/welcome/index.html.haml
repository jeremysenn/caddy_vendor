.jumbotron{style: 'background-color: white;'}
  .container
    -#
      - flash.each do |name, msg|
        %p= content_tag(:div, msg, class: "alert alert-info")
    - if user_signed_in?
      - if current_user.admin?
        = render 'welcome/admin_start_page_options'
      - elsif current_user.is_caddy?
        = render 'welcome/caddy_start_page_options'
      - else
        = render 'welcome/non_admin_start_page_options'
    - else
      %h1 
        %i.fa.fa-flag
        CaddyVend
      %br
      %h3 
        Easy payment processing of members and caddies.
        %br
        No more cash • Fully automated
      %ul.list-inline.text-xs-center
        %li.list-inline-item
          .col-xs-12
            %a.btn.btn-primary.btn-lg.btn-block{:href => new_user_session_path, :role => "button"}
              Log In
        %li.list-inline-item
          .col-xs-12
            %a.btn.btn-success.btn-lg.btn-block{:href => new_user_registration_path, :role => "button"}
              Sign Up

