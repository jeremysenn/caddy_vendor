.container
  %br
  .card.card-block
    %p.lead
      Tran ID:
      = "#{@transfer.ez_cash_tran_id.blank? ? 'None' : @transfer.ez_cash_tran_id}"
    %p.lead
      Date/Time:
      = @transfer.created_at.in_time_zone(current_user.time_zone).strftime("%-m/%-d/%y %l:%M %p")
    %p.lead
      From:
      = @from.full_name unless @from.blank?
    %p.lead
      To:
      = @to.full_name unless @to.blank?
    %p.lead
      Fee:
      = number_to_currency(@transfer.caddy_fee)
    %p.lead
      Tip:
      = number_to_currency(@transfer.caddy_tip)
    %p.lead
      Total:
      = number_to_currency(@transfer.amount)
  = link_to 'Back', :back, class: 'btn btn-secondary'